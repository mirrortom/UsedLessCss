// 文本
// 对齐
.txt-center
    @extend $ext-text-align-center
.txt-left
    @extend $ext-text-align-left
.txt-right
    @extend $ext-text-align-right
// 大小
for k, v in $fontSize-dict
    .txt-{k}
        font-size: v
// 粗细
for bold in range(100,900,100)
    k=bold/100
    .txt-b-{k}
        font-weight:bold
// 段落首行缩进2em
.txt-in
    text-indent: 2em
// 下划线
.txt-udline
    text-decoration:underline
.txt-udline-none
    text-decoration:none
// 超出时,显示省略号
.txt-overflow
    @extend $ext-text-overflow
// 间距
for size in range(1,10)
    sizepx=size * 1px
    sizeem=size * 1em
    sizerem=size * 1rem
    .spacing-{size}
        letter-spacing:sizepx
    .spacing-{size}em
        letter-spacing:sizeem
    .spacing-{size}rem
        letter-spacing:sizerem